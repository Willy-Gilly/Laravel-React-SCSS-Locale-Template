{
    "compilerOptions": {
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "react",
        "declaration": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "outDir": "public/lib",
        "inlineSources": false,
        "strictNullChecks": false,
        "noUnusedLocals": false,
        "resolveJsonModule": true,
        "sourceRoot": "resources/ts/",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "lib": [
            "es6",
            "dom",
            "es2020"
        ]
    },
    "include": [
        "resources/**/*.ts",
        "resources/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "public/lib",
        "public/build"
    ]
}
